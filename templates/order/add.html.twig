{% extends 'base.html.twig' %}

{% block javascript %}
<script src="https://js.stripe.com/v3/"></script>

{% endblock %}

{% block title %}Paiement de ma commande - La boutique{% endblock %}

{% block content %}
    <h2>Mon récapitulatif</h2>
    <p>Vérifier vos informations avant de passer votre commande sur la boutique</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <strong>Mon adresse de livraison</strong> <br>
            <div class="form-check mt-4">
                {{ delivery|raw }}
            </div>
            <hr>
            <strong>mon transporteur</strong> <br>
            <div class="form-check">
                {{ carrier.name }} <br>
                {{ carrier.description }}<br>
                {{ carrier.price|number_format(2,',','.') }}
            </div>
            <hr>
        </div>
        <hr>
        <div class="col-md-6">
            <strong>Ma commande</strong>
            <div class="order-summary">
                {% set total = null %}
                {% for key,product in cart %}
                    <div class="row {% if key > 0 %} mt-2 {% endif %}">
                        <div class="col-2">
                            <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px">
                        </div>
                        <div class="col-8 my-auto">
                            {{ product.product.name }}<br>
                            <small>
                                {{ product.product.subtitle }}
                                <br>
                                x {{ product.quantity }}
                            </small>
                        </div>
                        <div class="col-2 my-auto">
                            {{ ((product.product.price * product.quantity)/100)|number_format(2,',','.')}}
                        </div>
                    </div>
                    {% set total = total + (product.product.price * product.quantity) %}
                {% endfor %}
            </div>
            <b>Récap de ma commande</b><br>
            <b>Bouton pour payer</b>
            <hr>
            <strong>Sous-Total: </strong>{{ (total/100)|number_format(2,',','.') }} €<br>
            <strong>Livraison: </strong>{{ carrier.price|number_format(2,',','.')  }} €
            <hr>
            <strong>Total: </strong>{{ (carrier.price + (total/100))|number_format(2,',','.')  }} €
            <a class="btn btn-success btn-block mt-3" id="checkout-button">
                Payer {{ (carrier.price + (total/100))|number_format(2,',','.')  }} €
            </a>
        </div>
    </div>
    {% block script %}
        <script type="text/javascript">
        const stripe = Stripe("pk_test_51JpH8BHD4Rm2YyTMsicyVuTj01gfQzEdH36PG4CUZEllGNKSbt3DRNW1C4uwT4DcJbdrg7bjNchXg9OfMiNygXIj00QCXRUdnS");
        const checkoutButton = document.getElementById("checkout-button");
        checkoutButton.addEventListener("click", function(){
            fetch("/commande/create-session/{{ reference }}", {
                method: "POST",
            })
            .then(function (response){
              return response.json();
            }).then(function(session){
                if(session.error == 'order'){
                   window.location.replace('{{ path('order') }}');
                }
                return stripe.redirectToCheckout({ sessionId: session.id});
            }).then(function (result){
                if(result.error){
                    alert(result.error.message)
                }
            })
            .catch(function (error){
                console.error("Error", error);
            });
        });
        </script>
    {% endblock %}
{% endblock %}
